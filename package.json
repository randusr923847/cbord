{
  "name": "cbord",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-files",
    "clean": "rm -rf ./dist",
    "copy-files": "cp -r ./src/static ./src/views ./dist",
    "start": "node ./dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "format": "prettier . --write",
    "lint": "eslint src",
    "test": "npm run lint && npm run format",
    "buildw": "npm run cleanw && tsc && npm run copy-filesw",
    "cleanw": "if exist .\\dist rd /s /q .\\dist",
    "copy-filesw": "xcopy .\\src\\static .\\dist\\static /i /e && xcopy .\\src\\views .\\dist\\views /i /e",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "mongoose": "^8.17.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-ejs": "^1.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
