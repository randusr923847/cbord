{
  "name": "cbord",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run backup-dist && npm run clean && tsc && npm run copy-files",
    "backup-dist": "bash -c 'backup_name=\"backup\"; counter=1; while [[ -e \"./${backup_name}.tar.gz\" ]]; do backup_name=\"backup$counter\"; ((counter++)); done; tar -czf \"${backup_name}.tar.gz\" -C . dist && echo \"Backup created: ${backup_name}.tar.gz\"'",
    "clean": "rm -rf ./dist",
    "copy-files": "cp -r ./src/static ./src/views ./dist",
    "start": "node ./dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "format": "prettier . --write",
    "lint": "eslint src --fix",
    "test": "npm run lint && npm run format",
    "buildw": "npm run cleanw && tsc && npm run copy-filesw",
    "cleanw": "if exist .\\dist rd /s /q .\\dist",
    "copy-filesw": "xcopy .\\src\\static .\\dist\\static /i /e && xcopy .\\src\\views .\\dist\\views /i /e",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "ip-location-api": "^4.0.2",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^2.8.8",
    "prettier-plugin-ejs": "^1.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
